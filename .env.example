# ============================================
# OpenScripe Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ---- General ----
NODE_ENV=development
PORT=3001

# ---- Frontend ----
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# ---- Database (PostgreSQL) ----
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openscribe?schema=public

# ---- Redis ----
REDIS_URL=redis://localhost:6379

# ---- JWT Authentication ----
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-min-64-chars-change-this-in-production-immediately
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-64-chars-change-this-in-production

# ---- Encryption (for API keys at rest) ----
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_MASTER_KEY=your-32-byte-hex-encryption-key-change-this

# ---- CORS ----
CORS_ORIGIN=http://localhost:3000

# ---- Rate Limiting ----
RATE_LIMIT_API_PER_HOUR=100
RATE_LIMIT_GENERATIONS_PER_DAY=50
RATE_LIMIT_GLOBAL_PER_HOUR=1000

# ---- File Uploads ----
UPLOAD_MAX_SIZE_MB=10
UPLOAD_DIR=./uploads

# ---- Ollama (Local AI) ----
OLLAMA_BASE_URL=http://localhost:11434
